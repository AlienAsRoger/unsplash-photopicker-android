<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/picker_title_text_view"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:text="@string/unsplash"/>

    <ImageView
            android:contentDescription="@string/back"
            android:id="@+id/picker_back_image_view"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back_24dp"
            app:layout_constraintLeft_toLeftOf="@+id/picker_title_text_view"
            app:layout_constraintTop_toTopOf="@+id/picker_title_text_view"
            app:layout_constraintBottom_toBottomOf="@+id/picker_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:contentDescription="@string/done"
            android:id="@+id/picker_done_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@+id/picker_title_text_view"
            app:layout_constraintTop_toTopOf="@+id/picker_title_text_view"
            app:layout_constraintBottom_toBottomOf="@+id/picker_title_text_view"
            android:padding="8dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:src="@drawable/ic_done_24dp"/>

    <EditText
            android:id="@+id/picker_edit_text"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:hint="@string/search"
            android:layout_margin="8dp"
            android:textSize="14sp"
            android:background="@drawable/shape_rectangle_round_transparent_grey"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/picker_title_text_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"/>

    <ImageView
            android:contentDescription="@string/search"
            android:padding="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/picker_edit_text"
            android:src="@drawable/ic_search_24dp"
            app:layout_constraintTop_toTopOf="@+id/picker_edit_text"
            app:layout_constraintLeft_toLeftOf="@+id/picker_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

    <ImageView
            android:contentDescription="@string/clear"
            android:id="@+id/picker_clear_image_view"
            android:padding="6dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/picker_edit_text"
            android:src="@drawable/ic_cancel_24dp"
            app:layout_constraintTop_toTopOf="@+id/picker_edit_text"
            app:layout_constraintRight_toRightOf="@+id/picker_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

    <TextView
            android:id="@+id/picker_no_result_text_view"
            android:layout_width="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/picker_edit_text"
            android:text="@string/no_result"
            android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/picker_recycler_view"
            android:layout_width="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/picker_edit_text"
            android:layout_height="0dp"/>

    <LinearLayout
            android:id="@+id/picker_progress_bar_layout"
            android:background="@color/pickerColorTransparentGrey"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:focusable="true"
            android:clickable="true"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/picker_title_text_view"
            android:layout_height="0dp">

        <ProgressBar
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
